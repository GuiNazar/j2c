- @blocks.each do |block|
  .row.block{class: "block-#{block.id}"}
    = render "blocks/block", object: @block = block
    - if @blocks.length > 1
      .delete-btn
        = link_to block, method: :delete do
          %span.glyphicon.glyphicon-remove
    .move-up-btn
      = link_to move_up_block_path(block) do
        %span.glyphicon.glyphicon-arrow-up