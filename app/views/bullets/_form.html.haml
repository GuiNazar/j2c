= form_for @bullet do |f|
  - if @bullet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bullet.errors.count, "error")} prohibited this bullet from being saved:"
      %ul
        - @bullet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :subject
    = f.text_field :subject
  .actions
    = f.submit 'Save'
